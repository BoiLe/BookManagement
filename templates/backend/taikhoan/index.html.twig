{# Nội dung trong block content #}
{% block content %}
<!-- Nút thêm mới, bấm vào sẽ hiển thị form nhập thông tin Thêm mới -->
<a href="create.php" class="btn btn-primary">
    <span data-feather="plus"></span> Thêm mới
</a>
<table class="table table-bordered table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <th>Tài khoản</th>
            <th>Mật khẩu</th>
            <th>Tên </th>
            <th>Role</th>
            <th>Ngày làm việc</th>
            <th>Chức vụ</th>
            <th>Hành động</th>
         
        </tr>
    </thead>
    <tbody>
        {% for taikhoan in ds_taikhoan %}
        <tr>
            <td>{{ taikhoan.taikhoan_usr }}</td>
            <td>{{ taikhoan.taikhoan_pass }}</td>
            <td>{{ taikhoan.taikhoan_ten }}</td>
            <td>{{ taikhoan.taikhoan_role }}</td>
            <td>{{ taikhoan.taikhoan_ngaylamviec }}</td>
            <td>{{ taikhoan.taikhoan_chucvu }}</td>
                     
            <td>
                <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `lsp_ma` -->
                <a href="edit.php?taikhoan_usr={{ taikhoan.taikhoan_usr }}" class="btn btn-warning">
                    <span data-feather="edit"></span> Sửa
                </a>

                <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `lsp_ma` -->
                <a href="delete.php?taikhoan_usr={{ taikhoan.taikhoan_usr }}" class="btn btn-danger">
                    <span data-feather="delete"></span> Xóa
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
{# End Nội dung trong block content #}