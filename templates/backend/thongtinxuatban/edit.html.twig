{# Nội dung trong block content #}
{% block content %}
<form name="frmLoaiSanPham" id="frmLoaiSanPham" method="post" action="/MyProject/backend/thongtinxuatban/edit.php?ttxb_ms={{ thongtinxuatban.MASACH }}">
    <div class="form-group">
        <label for="ttxb_ms">Mã sách</label>
        <input type="text" class="form-control" id="ttxb_ms" name="ttxb_ms"  readonly value="{{ thongtinxuatban.MASACH }}">
        
    </div>
    <div class="form-group">
        <label for="ttxb_lantaiban">Lần tái bản</label>
        <input type="text" class="form-control" id="ttxb_lantaiban" name="ttxb_lantaiban"  readonly value="{{ thongtinxuatban.LANTAIBAN }}">
        
    </div>
    <div class="form-group">
        <label for="ttxb_namxuatban">Năm xuãt bản</label>
        <input type="text" class="form-control" id="ttxb_namxuatban" name="ttxb_namxuatban"  readonly value="{{ thongtinxuatban.NAMXUATBAN }}">
        
    </div>
    <div class="form-group">
        <label for="ttxb_nhaxuatban">Nhà xuất bản</label>
        <input type="text" class="form-control" id="ttxb_nhaxuatban" name="ttxb_nhaxuatban"  readonly value="{{ thongtinxuatban.NHAXUATBAN }}">
        
    </div>
    <div class="form-group">
        <label for="ttxb_giabia">Giá bìa</label>
        <input type="text" class="form-control" id="ttxb_giabia" name="ttxb_giabia"   value="{{ thongtinxuatban.GIABIA }}">
        
    </div>
   
    
    <button class="btn btn-primary" name="btnSave">Cập nhật</button>
</form>
{% endblock %}
