{# Nội dung trong block content #}
{% block content %}
<!-- Nút thêm mới, bấm vào sẽ hiển thị form nhập thông tin Thêm mới -->
<a href="create.php" class="btn btn-primary">
    <span data-feather="plus"></span> Thêm mới
</a>
<table class="table table-bordered table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <th>Mã sách</th>
            <th>Lần tái bản</th>
            <th>Năm xuất bản</th>
            <th>Nhà xuất bản</th>
            <th>Giá bìa</th>
            <th>Hành động</th>
         
        </tr>
    </thead>
    <tbody>
        {% for thongtinxuatban in ds_thongtinxuatban %}
        <tr>
            <td>{{ thongtinxuatban.ttxb_ms }}</td>
            <td>{{ thongtinxuatban.ttxb_lantaiban }}</td>
            <td>{{ thongtinxuatban.ttxb_namxuatban }}</td>
            <td>{{ thongtinxuatban.ttxb_nhaxuatban }}</td>
            <td>{{ thongtinxuatban.ttxb_giabia }}</td>
          
         
            <td>
                <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `lsp_ma` -->
                <a href="edit.php?ttxb_ms={{ thongtinxuatban.ttxb_ms }}" class="btn btn-warning">
                    <span data-feather="edit"></span> Sửa
                </a>

                <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `lsp_ma` -->
                <a href="delete.php?ttxb_ms={{ thongtinxuatban.ttxb_ms }}" class="btn btn-danger">
                    <span data-feather="delete"></span> Xóa
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
{# End Nội dung trong block content #}