{# Nội dung trong block content #}
{% block content %}
<form name="frmLoaiSanPham" id="frmLoaiSanPham" method="post" action="/MyProject/backend/nhatkinhapsach/edit.php?nkns_ms={{ nhatkinhapsach.MASACH }}">
    <div class="form-group">
        <label for="nkns_stt">STT</label>
        <input type="text" class="form-control" id="nkns_stt" name="nkns_stt" readonly value="{{ nhatkinhapsach.STT }}">
    </div>
    <div class="form-group">
        <label for="nkns_ms">Mã sách</label>
        <input type="text" class="form-control" id="nkns_ms" name="nkns_ms" readonly value="{{ nhatkinhapsach.MASACH }}">
    </div>
    <div class="form-group">
        <label for="nkns_sl">Số lượng</label>
        <input type="text" class="form-control" id="nkns_sl" name="nkns_sl" readonly value="{{ nhatkinhapsach.SOLUONG }}">
    </div>
    <div class="form-group">
        <label for="nkns_ngaynhap">Ngày nhập</label>
        <input type="text" class="form-control" id="nkns_ngaynhap" name="nkns_ngaynhap" readonly value="{{ nhatkinhapsach.NGAYNHAP }}">
    </div>
    
    <button class="btn btn-primary" name="btnSave">Cập nhật</button>
</form>
{% endblock %}
