{# Nội dung trong block content #}
{% block content %}
<form name="frmLoaiSanPham" id="frmLoaiSanPham" method="post" action="/MyProject/backend/kho/edit.php?k_ms={{ kho.MASACH }}">
    <div class="form-group">
        <label for="k_ms">Mã sách</label>
        <input type="text" class="form-control" id="k_ms" name="k_ms"  readonly value="{{ kho.MASACH }}">
        
    </div>
    <div class="form-group">
        <label for="k_tongsoluong">Tổng số lượng</label>
        <input type="text" class="form-control" id="k_tongsoluong" name="k_tongsoluong" value="{{ kho.TONGSOLUONG }}">
    </div>
    <div class="form-group">
        <label for="k_soluongcon">Số lượng còn</label>
        <input type="text" class="form-control" id="k_soluongcon" name="k_soluongcon"  readonly value="{{ kho.SOLUONGCON }}">
        
    </div>

    
    <button class="btn btn-primary" name="btnSave">Cập nhật</button>
</form>
{% endblock %}
