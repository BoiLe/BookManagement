{# Nội dung trong block content #}
{% block content %}
<!-- Nút thêm mới, bấm vào sẽ hiển thị form nhập thông tin Thêm mới -->
<a href="create.php" class="btn btn-primary">
    <span data-feather="plus"></span> Thêm mới
</a>
<table class="table table-bordered table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <th>Mã sách</th>
            <th>Tổng số lượng</th>
            <th>Số lượng còn</th>
            <th>Hành động</th>
         
        </tr>
    </thead>
    <tbody>
        {% for kho in ds_kho %}
        <tr>
            <td>{{ kho.k_ms }}</td>
            <td>{{ kho.k_tongsoluong }}</td>
            <td>{{ kho.k_soluongcon }}</td>
         
            <td>
                <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `lsp_ma` -->
                <a href="edit.php?k_ms={{ kho.k_ms }}" class="btn btn-warning">
                    <span data-feather="edit"></span> Sửa
                </a>

                <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `lsp_ma` -->
                <a href="delete.php?k_ms={{ kho.k_ms }}" class="btn btn-danger">
                    <span data-feather="delete"></span> Xóa
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
{# End Nội dung trong block content #}