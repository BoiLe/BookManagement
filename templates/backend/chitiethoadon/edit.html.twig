{# Nội dung trong block content #}
{% block content %}
<form name="frmLoaiSanPham" id="frmLoaiSanPham" method="post" action="/MyProject/backend/chitiethoadon/edit.php?cthd_mhd={{ chitiethoadon.MAHOADON }}">
    <div class="form-group">
        <label for="lv_ma">Mã loại sản phẩm</label>
        <input type="text" class="form-control" id="cthd_mhd" name="cthd_mhd"  readonly value="{{ chitiethoadon.MAHOADON }}">
        
    </div>
    <div class="form-group">
        <label for="lv_ten">Mã sách</label>
        <input type="text" class="form-control" id="cthd_ms" name="cthd_ms"  readonly  value="{{ chitiethoadon.MASACH }}">
    </div>
    <div class="form-group">
        <label for="cthd_sl">Số lượng</label>
        <input type="text" class="form-control" id="cthd_sl" name="cthd_sl"  value="{{ chitiethoadon.SOLUONG }}">
        
    </div>
    <div class="form-group">
        <label for="cthd_mgg">Mức giảm giá</label>
        <input type="text" class="form-control" id="cthd_mgg" name="cthd_mgg" value="{{ chitiethoadon.MUCGIAMGIA }}">
    </div>
    
    <button class="btn btn-primary" name="btnSave">Cập nhật</button>
</form>
{% endblock %}
{# End Nội dung trong block content #}