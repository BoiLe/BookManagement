{# Nội dung trong block content #}
{% block content %}
<form name="frmLoaiSanPham" id="frmLoaiSanPham" method="post" action="/MyProject/backend/hoadon/edit.php?hd_mhd={{ hoadon.MAHOADON }}">
    <div class="form-group">
        <label for="lv_ma">Mã hóa đơn</label>
        <input type="text" class="form-control" id="hd_mhd" name="hd_mhd"  readonly value="{{ hoadon.MAHOADON }}">
        
    </div>
    <div class="form-group">
        <label for="lv_ten">Tên khách hàng</label>
        <input type="text" class="form-control" id="hd_tenkhachhang" name="hd_tenkhachhang" value="{{ hoadon.TENKHACHHANG }}">
    </div>
    <div class="form-group">
        <label for="hd_mhd">Ngày lập</label>
        <input type="text" class="form-control" id="hd_ngaylap" name="hd_ngaylap"  readonly value="{{ hoadon.NGAYLAP }}">
        
    </div>
    <div class="form-group">
        <label for="lv_ten">Tổng tiền</label>
        <input type="text" class="form-control" id="hd_tongtien" name="hd_tongtien" value="{{ hoadon.TONGTIEN }}">
    </div>
    
    <button class="btn btn-primary" name="btnSave">Cập nhật</button>
</form>
{% endblock %}
