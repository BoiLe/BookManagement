{# Nội dung trong block content #}
{% block content %}
<form name="frmLoaiSanPham" id="frmLoaiSanPham" method="post" action="/MyProject/backend/linhvuc/edit.php?lv_ma={{ linhvuc.MALINHVUC }}">
    <div class="form-group">
        <label for="lv_ma">Mã loại sản phẩm</label>
        <input type="text" class="form-control" id="lv_ma" name="lv_ma"  readonly value="{{ linhvuc.MALINHVUC }}">
        
    </div>
    <div class="form-group">
        <label for="lv_ten">Tên loại sản phẩm</label>
        <input type="text" class="form-control" id="lv_ten" name="lv_ten" value="{{ linhvuc.TELINHVUC }}">
    </div>
    
    <button class="btn btn-primary" name="btnSave">Cập nhật</button>
</form>
{% endblock %}
